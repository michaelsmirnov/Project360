@model P360Lib.Employee

@{
    ViewBag.Title = "Создать сотрудника";
}

<h2>Создать сотрудника</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Сотрудник</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.PrimaryRoleID)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.PrimaryRoleID)
            @Html.ValidationMessageFor(model => model.PrimaryRoleID)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ExternalID)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ExternalID)
            @Html.ValidationMessageFor(model => model.ExternalID)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.StatusID)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.StatusID)
            @Html.ValidationMessageFor(model => model.StatusID)
        </div>

        <p>
            <input type="submit" value="Сохранить" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
